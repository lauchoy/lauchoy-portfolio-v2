---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Work - Lauchoy Portfolio" description="Explore my creative portfolio featuring brand design, photography, web development, and creative direction projects.">
  <!-- Hero Section -->
  <section class="section-padding bg-gradient-to-br from-primary-50 via-white to-accent-50">
    <div class="container-custom">
      <div class="text-center max-w-4xl mx-auto">
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-display font-bold text-primary-900 mb-6">
          My <span class="text-gradient">Work</span>
        </h1>
        <p class="text-xl md:text-2xl text-primary-600 mb-8">
          A collection of projects spanning brand identity, photography, web design, and creative direction.
        </p>
      </div>
    </div>
  </section>

  <!-- Filter Navigation -->
  <section class="py-8 bg-white border-b border-primary-100">
    <div class="container-custom">
      <div class="flex flex-wrap justify-center gap-4">
        <button class="filter-btn active" data-filter="all">All Work</button>
        <button class="filter-btn" data-filter="branding">Branding</button>
        <button class="filter-btn" data-filter="photography">Photography</button>
        <button class="filter-btn" data-filter="web">Web Design</button>
        <button class="filter-btn" data-filter="creative">Creative Direction</button>
      </div>
    </div>
  </section>

  <!-- Portfolio Grid -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" id="portfolio-grid">
        
        <!-- Project 1 - Branding -->
        <div class="portfolio-item group" data-category="branding">
          <div class="relative overflow-hidden rounded-2xl bg-gradient-to-br from-accent-100 to-primary-100 aspect-[4/3] hover:shadow-2xl transition-all duration-500">
            <div class="absolute inset-0 bg-gradient-to-br from-accent-500/20 to-primary-600/20 group-hover:from-accent-500/40 group-hover:to-primary-600/40 transition-all duration-500"></div>
            <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <div class="text-center text-white p-6">
                <h3 class="text-xl font-display font-semibold mb-2">TechFlow Startup</h3>
                <p class="text-sm text-primary-100 mb-4">Complete brand identity system</p>
                <div class="inline-flex items-center text-sm font-medium">
                  View Project
                  <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </div>
              </div>
            </div>
            <div class="absolute bottom-4 left-4 right-4">
              <div class="bg-white/90 backdrop-blur-sm rounded-lg p-3">
                <h3 class="font-display font-semibold text-primary-900 mb-1">TechFlow Startup</h3>
                <p class="text-sm text-primary-600">Brand Identity</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Project 2 - Photography -->
        <div class="portfolio-item group" data-category="photography">
          <div class="relative overflow-hidden rounded-2xl bg-gradient-to-br from-primary-100 to-accent-100 aspect-[4/3] hover:shadow-2xl transition-all duration-500">
            <div class="absolute inset-0 bg-gradient-to-br from-primary-500/20 to-accent-600/20 group-hover:from-primary-500/40 group-hover:to-accent-600/40 transition-all duration-500"></div>
            <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <div class="text-center text-white p-6">
                <h3 class="text-xl font-display font-semibold mb-2">Fashion Editorial</h3>
                <p class="text-sm text-primary-100 mb-4">High-fashion photography series</p>
                <div class="inline-flex items-center text-sm font-medium">
                  View Project
                  <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </div>
              </div>
            </div>
            <div class="absolute bottom-4 left-4 right-4">
              <div class="bg-white/90 backdrop-blur-sm rounded-lg p-3">
                <h3 class="font-display font-semibold text-primary-900 mb-1">Fashion Editorial</h3>
                <p class="text-sm text-primary-600">Photography</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Project 3 - Web Design -->
        <div class="portfolio-item group" data-category="web">
          <div class="relative overflow-hidden rounded-2xl bg-gradient-to-br from-accent-100 to-primary-100 aspect-[4/3] hover:shadow-2xl transition-all duration-500">
            <div class="absolute inset-0 bg-gradient-to-br from-accent-600/20 to-primary-500/20 group-hover:from-accent-600/40 group-hover:to-primary-500/40 transition-all duration-500"></div>
            <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <div class="text-center text-white p-6">
                <h3 class="text-xl font-display font-semibold mb-2">E-commerce Platform</h3>
                <p class="text-sm text-primary-100 mb-4">Modern shopping experience</p>
                <div class="inline-flex items-center text-sm font-medium">
                  View Project
                  <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </div>
              </div>
            </div>
            <div class="absolute bottom-4 left-4 right-4">
              <div class="bg-white/90 backdrop-blur-sm rounded-lg p-3">
                <h3 class="font-display font-semibold text-primary-900 mb-1">E-commerce Platform</h3>
                <p class="text-sm text-primary-600">Web Design</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Project 4 - Creative Direction -->
        <div class="portfolio-item group" data-category="creative">
          <div class="relative overflow-hidden rounded-2xl bg-gradient-to-br from-primary-100 to-accent-100 aspect-[4/3] hover:shadow-2xl transition-all duration-500">
            <div class="absolute inset-0 bg-gradient-to-br from-primary-600/20 to-accent-500/20 group-hover:from-primary-600/40 group-hover:to-accent-500/40 transition-all duration-500"></div>
            <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <div class="text-center text-white p-6">
                <h3 class="text-xl font-display font-semibold mb-2">Luxury Campaign</h3>
                <p class="text-sm text-primary-100 mb-4">Creative direction & art direction</p>
                <div class="inline-flex items-center text-sm font-medium">
                  View Project
                  <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </div>
              </div>
            </div>
            <div class="absolute bottom-4 left-4 right-4">
              <div class="bg-white/90 backdrop-blur-sm rounded-lg p-3">
                <h3 class="font-display font-semibold text-primary-900 mb-1">Luxury Campaign</h3>
                <p class="text-sm text-primary-600">Creative Direction</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Project 5 - Branding -->
        <div class="portfolio-item group" data-category="branding">
          <div class="relative overflow-hidden rounded-2xl bg-gradient-to-br from-accent-100 to-primary-100 aspect-[4/3] hover:shadow-2xl transition-all duration-500">
            <div class="absolute inset-0 bg-gradient-to-br from-accent-500/20 to-primary-600/20 group-hover:from-accent-500/40 group-hover:to-primary-600/40 transition-all duration-500"></div>
            <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <div class="text-center text-white p-6">
                <h3 class="text-xl font-display font-semibold mb-2">Artisan Coffee Co.</h3>
                <p class="text-sm text-primary-100 mb-4">Brand identity & packaging</p>
                <div class="inline-flex items-center text-sm font-medium">
                  View Project
                  <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </div>
              </div>
            </div>
            <div class="absolute bottom-4 left-4 right-4">
              <div class="bg-white/90 backdrop-blur-sm rounded-lg p-3">
                <h3 class="font-display font-semibold text-primary-900 mb-1">Artisan Coffee Co.</h3>
                <p class="text-sm text-primary-600">Brand Identity</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Project 6 - Photography -->
        <div class="portfolio-item group" data-category="photography">
          <div class="relative overflow-hidden rounded-2xl bg-gradient-to-br from-primary-100 to-accent-100 aspect-[4/3] hover:shadow-2xl transition-all duration-500">
            <div class="absolute inset-0 bg-gradient-to-br from-primary-500/20 to-accent-600/20 group-hover:from-primary-500/40 group-hover:to-accent-600/40 transition-all duration-500"></div>
            <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <div class="text-center text-white p-6">
                <h3 class="text-xl font-display font-semibold mb-2">Portrait Series</h3>
                <p class="text-sm text-primary-100 mb-4">Contemporary portrait photography</p>
                <div class="inline-flex items-center text-sm font-medium">
                  View Project
                  <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </div>
              </div>
            </div>
            <div class="absolute bottom-4 left-4 right-4">
              <div class="bg-white/90 backdrop-blur-sm rounded-lg p-3">
                <h3 class="font-display font-semibold text-primary-900 mb-1">Portrait Series</h3>
                <p class="text-sm text-primary-600">Photography</p>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section-padding bg-primary-900 text-white">
    <div class="container-custom text-center">
      <h2 class="text-4xl md:text-5xl font-display font-bold mb-6">
        Like What You See?
      </h2>
      <p class="text-xl text-primary-300 mb-8 max-w-2xl mx-auto">
        Let's discuss how we can bring your creative vision to life with a custom project tailored to your needs.
      </p>
      <a href="/contact" class="inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-primary-900 bg-white rounded-full hover:bg-primary-50 transition-colors">
        Start a Project
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  .filter-btn {
    @apply px-6 py-2 text-sm font-medium text-primary-600 bg-white border border-primary-200 rounded-full hover:bg-primary-50 hover:text-primary-900 transition-all duration-200;
  }
  
  .filter-btn.active {
    @apply bg-primary-900 text-white border-primary-900;
  }
  
  .portfolio-item {
    @apply transition-all duration-300;
  }
  
  .portfolio-item.hidden {
    @apply opacity-0 scale-95 pointer-events-none;
  }
</style>

<script>
  // Portfolio filtering functionality
  document.addEventListener('DOMContentLoaded', function() {
    const filterButtons = document.querySelectorAll('.filter-btn');
    const portfolioItems = document.querySelectorAll('.portfolio-item');
    
    filterButtons.forEach(button => {
      button.addEventListener('click', function() {
        const filter = this.getAttribute('data-filter');
        
        // Update active button
        filterButtons.forEach(btn => btn.classList.remove('active'));
        this.classList.add('active');
        
        // Filter portfolio items
        portfolioItems.forEach(item => {
          const category = item.getAttribute('data-category');
          
          if (filter === 'all' || category === filter) {
            item.classList.remove('hidden');
          } else {
            item.classList.add('hidden');
          }
        });
      });
    });
  });
</script>
