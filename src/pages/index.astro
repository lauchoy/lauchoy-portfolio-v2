---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Lauchoy - Creative Portfolio">
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Background Elements -->
    <div class="absolute inset-0 bg-gradient-to-br from-primary-50 via-white to-accent-50"></div>
    <div class="absolute top-20 left-10 w-72 h-72 bg-accent-200/20 rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-20 right-10 w-96 h-96 bg-primary-200/20 rounded-full blur-3xl animate-float animation-delay-400"></div>
    
    <div class="container-custom relative z-10">
      <div class="text-center max-w-4xl mx-auto">
        <h1 class="text-5xl md:text-7xl lg:text-8xl font-display font-bold mb-6 animate-fade-in">
          <span class="text-gradient">Creative</span><br>
          <span class="text-primary-900">Portfolio</span>
        </h1>
        <p class="text-xl md:text-2xl text-primary-600 mb-8 max-w-2xl mx-auto animate-slide-up animation-delay-200">
          Crafting digital experiences through innovative design, photography, and creative direction.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center animate-slide-up animation-delay-400">
          <a href="#work" class="btn-primary">
            View My Work
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
            </svg>
          </a>
          <a href="/contact" class="btn-secondary">Get In Touch</a>
        </div>
      </div>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <div class="w-6 h-10 border-2 border-primary-300 rounded-full flex justify-center">
        <div class="w-1 h-3 bg-primary-300 rounded-full mt-2 animate-pulse"></div>
      </div>
    </div>
  </section>

  <!-- Featured Work Section -->
  <section id="work" class="section-padding bg-white">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-display font-bold text-primary-900 mb-4">
          Featured Work
        </h2>
        <p class="text-xl text-primary-600 max-w-2xl mx-auto">
          A curated selection of projects showcasing creative excellence and technical innovation.
        </p>
      </div>
      
      <!-- Project Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-12">
        <!-- Project 1 -->
        <div class="group relative overflow-hidden rounded-2xl bg-primary-100 aspect-[4/3] hover:shadow-2xl transition-all duration-500">
          <div class="absolute inset-0 bg-gradient-to-br from-accent-500/20 to-primary-600/20 group-hover:from-accent-500/30 group-hover:to-primary-600/30 transition-all duration-500"></div>
          <div class="absolute inset-0 flex items-center justify-center">
            <div class="text-center text-white p-8">
              <h3 class="text-2xl font-display font-semibold mb-2">Brand Identity</h3>
              <p class="text-primary-100 mb-4">Modern visual identity for tech startup</p>
              <div class="inline-flex items-center text-sm font-medium">
                View Project
                <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Project 2 -->
        <div class="group relative overflow-hidden rounded-2xl bg-primary-100 aspect-[4/3] hover:shadow-2xl transition-all duration-500">
          <div class="absolute inset-0 bg-gradient-to-br from-primary-500/20 to-accent-600/20 group-hover:from-primary-500/30 group-hover:to-accent-600/30 transition-all duration-500"></div>
          <div class="absolute inset-0 flex items-center justify-center">
            <div class="text-center text-white p-8">
              <h3 class="text-2xl font-display font-semibold mb-2">Photography</h3>
              <p class="text-primary-100 mb-4">Editorial fashion photography series</p>
              <div class="inline-flex items-center text-sm font-medium">
                View Project
                <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Project 3 -->
        <div class="group relative overflow-hidden rounded-2xl bg-primary-100 aspect-[4/3] hover:shadow-2xl transition-all duration-500">
          <div class="absolute inset-0 bg-gradient-to-br from-accent-600/20 to-primary-500/20 group-hover:from-accent-600/30 group-hover:to-primary-500/30 transition-all duration-500"></div>
          <div class="absolute inset-0 flex items-center justify-center">
            <div class="text-center text-white p-8">
              <h3 class="text-2xl font-display font-semibold mb-2">Web Design</h3>
              <p class="text-primary-100 mb-4">E-commerce platform redesign</p>
              <div class="inline-flex items-center text-sm font-medium">
                View Project
                <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Project 4 -->
        <div class="group relative overflow-hidden rounded-2xl bg-primary-100 aspect-[4/3] hover:shadow-2xl transition-all duration-500">
          <div class="absolute inset-0 bg-gradient-to-br from-primary-600/20 to-accent-500/20 group-hover:from-primary-600/30 group-hover:to-accent-500/30 transition-all duration-500"></div>
          <div class="absolute inset-0 flex items-center justify-center">
            <div class="text-center text-white p-8">
              <h3 class="text-2xl font-display font-semibold mb-2">Creative Direction</h3>
              <p class="text-primary-100 mb-4">Campaign for luxury fashion brand</p>
              <div class="inline-flex items-center text-sm font-medium">
                View Project
                <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <div class="text-center">
        <a href="/work" class="btn-secondary">
          View All Projects
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="section-padding bg-primary-50">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-display font-bold text-primary-900 mb-4">
          What I Do
        </h2>
        <p class="text-xl text-primary-600 max-w-2xl mx-auto">
          Comprehensive creative services tailored to bring your vision to life.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Service 1 -->
        <div class="bg-white rounded-2xl p-8 hover:shadow-xl transition-all duration-300 group">
          <div class="w-16 h-16 bg-accent-100 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-accent-200 transition-colors">
            <svg class="w-8 h-8 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-display font-semibold text-primary-900 mb-3">Brand Design</h3>
          <p class="text-primary-600 mb-4">Creating distinctive visual identities that capture your brand's essence and resonate with your audience.</p>
          <ul class="text-sm text-primary-500 space-y-1">
            <li>• Logo Design</li>
            <li>• Brand Guidelines</li>
            <li>• Visual Identity Systems</li>
          </ul>
        </div>
        
        <!-- Service 2 -->
        <div class="bg-white rounded-2xl p-8 hover:shadow-xl transition-all duration-300 group">
          <div class="w-16 h-16 bg-primary-100 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-primary-200 transition-colors">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-display font-semibold text-primary-900 mb-3">Photography</h3>
          <p class="text-primary-600 mb-4">Professional photography services for fashion, portraits, products, and creative campaigns.</p>
          <ul class="text-sm text-primary-500 space-y-1">
            <li>• Fashion Photography</li>
            <li>• Portrait Sessions</li>
            <li>• Product Photography</li>
          </ul>
        </div>
        
        <!-- Service 3 -->
        <div class="bg-white rounded-2xl p-8 hover:shadow-xl transition-all duration-300 group">
          <div class="w-16 h-16 bg-accent-100 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-accent-200 transition-colors">
            <svg class="w-8 h-8 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-display font-semibold text-primary-900 mb-3">Web Design</h3>
          <p class="text-primary-600 mb-4">Modern, responsive websites that combine beautiful design with exceptional user experience.</p>
          <ul class="text-sm text-primary-500 space-y-1">
            <li>• UI/UX Design</li>
            <li>• Responsive Development</li>
            <li>• E-commerce Solutions</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div>
          <h2 class="text-4xl md:text-5xl font-display font-bold text-primary-900 mb-6">
            Creative Professional
          </h2>
          <p class="text-xl text-primary-600 mb-6">
            With over 8 years of experience in creative design and photography, I specialize in crafting compelling visual narratives that connect brands with their audiences.
          </p>
          <p class="text-primary-600 mb-8">
            My approach combines strategic thinking with artistic vision, ensuring every project not only looks exceptional but also achieves its intended goals. From concept to execution, I'm committed to delivering work that exceeds expectations.
          </p>
          <div class="flex flex-wrap gap-4 mb-8">
            <span class="px-4 py-2 bg-primary-100 text-primary-700 rounded-full text-sm font-medium">Creative Direction</span>
            <span class="px-4 py-2 bg-accent-100 text-accent-700 rounded-full text-sm font-medium">Photography</span>
            <span class="px-4 py-2 bg-primary-100 text-primary-700 rounded-full text-sm font-medium">Brand Design</span>
            <span class="px-4 py-2 bg-accent-100 text-accent-700 rounded-full text-sm font-medium">Web Design</span>
          </div>
          <a href="/about" class="btn-primary">Learn More About Me</a>
        </div>
        
        <div class="relative">
          <div class="aspect-square bg-gradient-to-br from-accent-200 to-primary-200 rounded-3xl"></div>
          <div class="absolute -bottom-6 -right-6 w-24 h-24 bg-accent-500 rounded-2xl opacity-80"></div>
          <div class="absolute -top-6 -left-6 w-16 h-16 bg-primary-500 rounded-xl opacity-60"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section-padding bg-primary-900 text-white">
    <div class="container-custom text-center">
      <h2 class="text-4xl md:text-5xl font-display font-bold mb-6">
        Ready to Create Something Amazing?
      </h2>
      <p class="text-xl text-primary-300 mb-8 max-w-2xl mx-auto">
        Let's collaborate to bring your vision to life. Whether it's a brand identity, photography project, or digital experience, I'm here to help.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-primary-900 bg-white rounded-full hover:bg-primary-50 transition-colors">
          Start a Project
        </a>
        <a href="/work" class="inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-white border-2 border-white rounded-full hover:bg-white hover:text-primary-900 transition-colors">
          View Portfolio
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Additional custom styles for enhanced animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-in-up {
    animation: fadeInUp 0.6s ease-out;
  }
</style>
